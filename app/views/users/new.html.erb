<h1>Sign Up!</h1>

<%= form_tag "/users", method: :post do %>

    <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil %>
    </div>

    <div class="form-group">
        <%= label_tag :user_name %>
        <%= text_field_tag :user_name, nil%>
    </div>

    <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil %>
    </div>

    <div class="form-group">
        <%= label_tag :password_confirmation %>
        <%= password_field_tag :password_confirmation, nil %>
    </div>

    <%= submit_tag "Create Account" %>
<% end %>