<% @user.errors.full_messages.each do |error| %>
<div class="alert alert-warning alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= error %>
</div>
<% end %>

<%= form_tag "/users/#{current_user.id}", method: :patch do %>

    <div class="form-group">
        <%= hidden_field_tag :email, current_user.email %>
    </div>

    <div class="form-group">
        <%= label_tag :user_name %>
        <%= text_field_tag :user_name, current_user.user_name %>
    </div>

    <div class="form-group">
        <%= hidden_field_tag :password, current_user.password %>
    </div>

    <div class="form-group">
        <%= hidden_field_tag :password_confirmation, current_user.password_confirmation %>
    </div>

    <%= submit_tag "Edit Account" %>
<% end %>