<% @post.errors.full_messages.each do |error| %>
<div class="alert alert-warning alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= error %>
</div>
<% end %>
<div class="col-xs-12 col-sm-2 wrapper-1"></div>
<div class="col-xs-12 col-sm-8 wrapper-1">
    <h1>Gobble got a grammar gaffe?</h1>
    <div class="well">
    <%= form_tag "/posts/#{@post.id}", method: :patch do %>
        <%= text_field_tag :text, @post.text %>
    </div>
        <%= submit_tag "Update Your Gobble" %>
    <% end %>
</div>
<div class="col-xs-12 col-sm-2 wrapper-1"></div>
